<ejercicio1>
    <deportistas>
        <deportista>
            <deporte disciplina="Atletismo" /><!--'Atletismo' no puede aparecer suelto dentro de '<>'. Debe ponerse dentro de un atributo o dentro de la etiqueta.-->
            <nombre>Jesse Owens</nombre>
        </deportista><!--Falta cerrar adecuadamente la etiqueta con '/'-->
        <deportista>
            <deporte disciplina="Natación" />
            <nombre>Mark Spitz</nombre>
        </deportista>
    </deportistas>
    
    <peliculas>
        <pelicula>
            <titulo>Con faldas y a lo loco</titulo>
            <director>Billy Wilder</director>
        </pelicula>
        <pelicula>
            <titulo>Sopa de ganso</titulo><!--Las etiquetas deberían seguir el mismo orden.-->
            <director>Leo McCarey</director>
        </pelicula>
        <autor>Barto</autor><!--Hay que abrir la etiqueta correctamente, sin '/'-->
    </peliculas>

    <texto>
        <titulo>XML explicado a los niños</titulo><!-- Etiqueta de apertura y cierre deben coincidir.-->
        <parrafo>El <abreviatura>XML</abreviatura>define cómo crear lenguajes de marcas.</parrafo><!-- Nombre de las etiquetas sin tildes.-->
        <parrafo>Las marcas se añaden a un documento de texto para añadir información.</parrafo>
        <http>www.example.org</http><!-- Etiqueta sin caracteres '/'-->
    </texto>

    <geografia_mundial><!-- Nombre de etiqueta sin espacios.-->
        <pais>
            <nombre>España</nombre><!-- Nombres de etiquetas no coincidentes con la etiqueta padre.-->
            <continente>Europa</continente>
            <capital nombre="Madrid" /><!-- Atributo debe aparecer en la apertura.-->
        </pais>
    </geografia_mundial>

    <programas>
        <programa nombre="Firefox" licencias="GPL, MPL" /><!-- No pueden existir dos atributos con el mismo nombre.-->
        <programa nombre="LibreOffice" licencia="LGPL" />
        <programa nombre="Inkscape" licencia="GPL" /><!-- Valor de atributo entrecomillado.-->
    </programas>

    <mundiales-de-futbol>
        <mundial>
            <pais name="España" /><!-- Etiqueta debe tener nombre antes de atributo.-->
            <anno anno="1982" /><!-- Etiqueta no admite sólo caracteres numéricos como nombre. El año se debe guardar como valor de un atributo.-->
        </mundial>
    </mundiales-de-futbol>

    <mediosDeTransporte>
        <bicicleta velocidad="v&gt;100km/h" /><!-- Ni el nombre de la etiqueta ni los atributos pueden contener caracteres '<' o '>'.-->
        <patinete velocidad_maxima="50kmh" /><!-- Nombre de atributo sin espacios. No se admite caracter '/'.-->
    </mediosDeTransporte>
</ejercicio1>
